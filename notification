setclipboard("https://discord.gg/minershaven")
local notification = Instance.new("ScreenGui")
local frame = Instance.new("Frame")
local label = Instance.new("TextLabel")
local button = Instance.new("TextButton")

notification.Name = "Notification"
notification.Parent = game.CoreGui

frame.Name = "Frame"
frame.Parent = notification
frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
frame.BorderColor3 = Color3.fromRGB(0, 0, 0)
frame.Position = UDim2.new(0.5, -150, 0.5, -50)
frame.Size = UDim2.new(0, 300, 0, 100)
frame.AnchorPoint = Vector2.new(0.5, 0.5)

-- Set up UserInputService to handle dragging
local UserInputService = game:GetService("UserInputService")
local dragging
local dragInput
local dragStart
local startPos
local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end
frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)
frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)
UserInputService.InputChanged:Connect(function(input, gameProcessedEvent)
    if input == dragInput and dragging then
        update(input)
    end
end)

label.Name = "Label"
label.Parent = frame
label.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
label.BackgroundTransparency = 1
label.Position = UDim2.new(0.5, -125, 0.35, -20)
label.Size = UDim2.new(0, 250, 0, 40)
label.Font = Enum.Font.SourceSans
label.Text = "This is a paid script, to buy, visit the discord server which has been copied to your clipboard."
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.TextScaled = true
label.TextWrapped = true
label.TextXAlignment = Enum.TextXAlignment.Center
label.TextYAlignment = Enum.TextYAlignment.Center

button.Name = "Button"
button.Parent = frame
button.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
button.BorderColor3 = Color3.fromRGB(0, 0, 0)
button.Position = UDim2.new(0.5, -60, 0.7, -15)
button.Size = UDim2.new(0, 120, 0, 30)
button.Font = Enum.Font.SourceSans
button.Text = "OK"
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.TextScaled = true

button.MouseButton1Click:Connect(function()
    notification:Destroy()
end)

